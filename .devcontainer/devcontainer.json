{
	"name": "Dungeon of Doom",
	"image": "mcr.microsoft.com/devcontainers/python:3.14-trixie",
	"onCreateCommand": "pip install -r requirements.txt",
	"containerEnv": {
		"PYTHONPATH": "${containerWorkspaceFolder}/src"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.black-formatter",
				"ms-python.python"
			]
		}
	}
}
